# Production Environment Variables
# Copy this file to .env.production and fill in the values

# Database (Production)
DATABASE_URL="postgresql://username:password@production-host:5432/voiceflow_ai?schema=public&connection_limit=10&pool_timeout=20"
DIRECT_URL="postgresql://username:password@production-host:5432/voiceflow_ai?schema=public"

# AI Services (Production Keys)
DEEPGRAM_API_KEY="your_production_deepgram_api_key"
ASSEMBLYAI_API_KEY="your_production_assemblyai_api_key"
OPENAI_API_KEY="your_production_openai_api_key"

# Storage (Appwrite Cloud Production)
NEXT_PUBLIC_APPWRITE_ENDPOINT="https://cloud.appwrite.io/v1"
NEXT_PUBLIC_APPWRITE_PROJECT_ID="your_production_project_id"
APPWRITE_API_KEY="your_production_api_key"

# Security (Production)
ENCRYPTION_KEY="your_production_32_character_encryption_key_here_minimum"
BETTER_AUTH_SECRET="your_production_better_auth_secret_generate_with_openssl"
BETTER_AUTH_URL="https://yourdomain.com"
NEXT_PUBLIC_BETTER_AUTH_URL="https://yourdomain.com"
ARCJET_KEY="your_production_arcjet_api_key"

# Redis Cache (Production)
REDIS_URL="redis://production-redis-host:6379"
REDIS_PASSWORD="your_redis_password"
REDIS_TLS="true"

# Application (Production)
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://yourdomain.com"

# Monitoring (Production)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ENVIRONMENT="production"
SENTRY_TRACES_SAMPLE_RATE="0.1"

# Vercel (Auto-populated by Vercel)
VERCEL="1"
VERCEL_ENV="production"
VERCEL_URL="your-app.vercel.app"

# Database Connection Pooling
DATABASE_POOL_MIN="2"
DATABASE_POOL_MAX="10"
DATABASE_POOL_IDLE_TIMEOUT="30000"
DATABASE_POOL_CONNECTION_TIMEOUT="20000"

# Rate Limiting
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_WINDOW="60000"
RATE_LIMIT_MAX_REQUESTS="100"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"
ENABLE_REQUEST_LOGGING="true"
ENABLE_ERROR_TRACKING="true"

# Performance
ENABLE_COMPRESSION="true"
ENABLE_CACHING="true"
CDN_CACHE_TTL="31536000"

# Security Headers
ENABLE_SECURITY_HEADERS="true"
ENABLE_CORS="false"
ALLOWED_ORIGINS="https://yourdomain.com"

# Cost Monitoring
ENABLE_COST_MONITORING="true"
COST_ALERT_THRESHOLD="0.35"
MONTHLY_BUDGET="1000"

# Feature Flags
ENABLE_AI_PROCESSING="true"
ENABLE_SPEAKER_DIARIZATION="true"
ENABLE_CONTENT_MODERATION="true"
ENABLE_BATCH_PROCESSING="true"

# Backup and Recovery
ENABLE_AUTO_BACKUP="true"
BACKUP_RETENTION_DAYS="30"
